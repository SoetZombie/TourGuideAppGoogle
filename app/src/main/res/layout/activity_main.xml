<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luke.tourguideappgoogle.MainActivity"
    >


    <TextView
        android:padding="16dp"
        android:id="@+id/history_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:background="@color/green"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_above="@+id/fun_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"/>

    <TextView
        android:padding="16dp"
        android:id="@+id/fun_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fun"
        android:background="@color/blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_above="@+id/relax_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"/>

    <TextView
        android:padding="16dp"
        android:id="@+id/relax_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/relax"
        android:background="@color/red"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_above="@+id/restaurant_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"/>

    <TextView
        android:padding="16dp"
        android:id="@+id/restaurant_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/restaurants"
        android:background="@color/darkorange"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/background_main"
        android:layout_above="@+id/history_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"/>


</RelativeLayout>
